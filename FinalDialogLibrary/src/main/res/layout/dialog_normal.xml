<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:id="@+id/ll_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_normal"
    android:background="@drawable/bg_rectangle_white_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_big"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="@dimen/text_big"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="240dp"
        android:padding="@dimen/margin_normal"
        android:scrollbars="vertical"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_normal"
        tools:text="1.aaaaaaaaaaaaaaaaaaa\n2.bbbbbbbbbbbbb\n3.ccccccccccccc1.aaaaaaaaaaaaaaaaaaa\n2.bbbbbbbbbbbbb\n3.ccccccccccccc1.aaaaaaaaaaaaaaaaaaa\n2.bbbbbbbbbbbbb\n3.ccccccccccccc1.aaaaaaaaaaaaaaaaaaa\n2.bbbbbbbbbbbbb\n3.ccccccccccccc1.aaaaaaaaaaaaaaaaaaa\n2.bbbbbbbbbbbbb\n3.ccccccccccccc1.aaaaaaaaaaaaaaaaaaa\n2.bbbbbbbbbbbbb\n3.ccccccccccccc1.aaaaaaaaaaaaaaaaaaa\n2.bbbbbbbbbbbbb\n3.ccccccccccccc1.aaaaaaaaaaaaaaaaaaa\n2.bbbbbbbbbbbbb\n3.ccccccccccccc1.aaaaaaaaaaaaaaaaaaa\n2.bbbbbbbbbbbbb\n3.cccccccccccccdddd"/>

    <include
        layout="@layout/app_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:singleLine="true"
            android:text="按钮1"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/text_normal"/>

        <include
            android:id="@+id/line1"
            layout="@layout/app_line_height"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:singleLine="true"
            android:text="按钮2"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/text_normal"/>

        <include
            android:id="@+id/line2"
            layout="@layout/app_line_height"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_normal"
            android:singleLine="true"
            android:text="按钮3"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/text_normal"/>

    </LinearLayout>

</LinearLayout>